<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.flashcardapp.MainActivity">


    <TextView
        android:id="@+id/flashcard_question"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/card_background"
        android:elevation="5dp"
        android:gravity="center"
        android:text="Who is the 44th President of the United States? "
        android:textSize="40dp" />

    <TextView
        android:id="@+id/flashcard_answer1"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/light_orange"
        android:gravity="center"
        android:text="Bill Clinton"
        android:textSize="30dp" />
    <TextView
        android:id="@+id/flashcard_answer2"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/flashcard_answer1"
        android:layout_marginTop="162dp"
        android:layout_marginBottom="-100dp"
        android:background="@color/light_orange"
        android:gravity="center"
        android:text="George H. W. Bush"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/flashcard_answer3"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/flashcard_answer2"
        android:layout_marginTop="162dp"
        android:layout_marginBottom="-100dp"
        android:background="@color/light_orange"
        android:gravity="center"
        android:text="Barack Obama"
        android:textSize="30dp" />

</RelativeLayout>